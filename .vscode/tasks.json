{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "time g++ -std=c++26 -I Includes RootServer.cpp -g -o RootServer -Wno-error=maybe-uninitialized",
            "options": {
                "cwd": "${workspaceFolder}/CPP/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Компиляция проекта"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/CPP/RootServer -d -t",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["Build"]
        }
    ]
}